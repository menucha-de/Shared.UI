<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with type="havis.net.ui.shared.resourcebundle.ResourceBundle" field="res"></ui:with>
	<ui:style>
		.label {
			display: -webkit-box;
			display: -moz-box;
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;
			-ms-flex-align: center;
			align-items: center;
			/*justify-content: space-between;*/
			cursor: pointer;
			padding-right: 0.5em;
			font-weight: bold;
		}
		
		.sort-button {
			margin-left: 0.5em;
		}
	</ui:style>
	<g:FocusPanel ui:field="header">
		<g:FlowPanel styleName="{style.label}">
			<g:InlineLabel ui:field="text" />
			<g:Image ui:field="button" resource="{res.llrpListSortNone}" addStyleNames="{style.sort-button}" />
		</g:FlowPanel>
	</g:FocusPanel>
</ui:UiBinder> 